{
  "name": "esy-openssl",
  "version": "0.1.0",
  "description": "Mirror of OpenSSL",
  "license": "GPLv3",
  "esy": {
    "build": [
        ["bash", "-c", "#{os == 'windows' ? './configure mingw64 --prefix=$cur__install --cross-compile-prefix=x86_64-w64-mingw32-' : './config --prefix=$cur__install'}"],
        ["make"],
        ["make", "install"]
    ],
    "buildsInSource": true
  },
  "dependencies": {
  },
  "exportedEnv": {
    "OPENSSL_LIB_PATH": {
        "val": "#{self.lib}",
        "scope": "global"
    },
    "OPENSSL_INCLUDE_PATH": {
        "val": "#{self.include}",
        "scope": "global"
    }
  }
}
